<h1>New Outfit</h1>
<%@user_articles = Article.all.where(user_id:session[:user_id])%>
<%= form_for @outfit, url:user_outfits_path(session[:user_id]) do |f| %>
  <%= f.label "Name of Outfit"%>
  <%= f.text_field "name"%>
  <br>
  <%= f.label "Pants"%>
  <%= f.collection_select(:bottom_id, @user_articles.where(category: "bottom"), :id, :category)%>
  <br>
  <%= f.label "Shirt"%>
  <%= f.collection_select(:top_id, @user_articles.where(category: "top"), :id, :category)%>
  <br>
  <%= f.label "Shoes"%>
  <%= f.collection_select(:shoes_id, @user_articles.where(category: "shoes"), :id, :category)%>
  <br>
  <%= f.label "Outerwear"%>
  <%= f.collection_select(:outerwear_id, @user_articles.where(category: "outerwear"), :id, :category)%>
  <br>
  <%= f.label "Accessories"%>
  <%= f.collection_select(:accessory_id, @user_articles.where(category: "accessory"), :id, :category)%>
  <br>
  <%= f.submit "Create Outfit" %> <br>

<% end %>
