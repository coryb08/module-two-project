<p id="notice"><%= notice %></p>

<h1>Article Outfits</h1>

<table>
  <thead>
    <tr>
      <th>Outfit</th>
      <th>Article</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @article_outfits.each do |article_outfit| %>
      <tr>
        <td><%= article_outfit.outfit_id %></td>
        <td><%= article_outfit.article_id %></td>
        <td><%= link_to 'Show', article_outfit %></td>
        <td><%= link_to 'Edit', edit_article_outfit_path(article_outfit) %></td>
        <td><%= link_to 'Destroy', article_outfit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

